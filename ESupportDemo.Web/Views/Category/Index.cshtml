@using ESupportDemo.Web.Helper
@model List<ESupportDemo.Web.Models.Category>
@{
    ViewBag.Title = "Kategoriler";
    TempData["ActivePage"] = 3;
    var hasResult = true;
}

<section class="container-fluid category-list">
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-icon"><i class="fa fa-th"></i></div>
                <div class="card-content">
                    <h2 class="card-title">
                        @ViewBag.Title
                        <a href="@Url.Action("Detail", new {name = "yeni-kategori", id = 0})" class="btn btn-info btn-round btn-fab btn-fab-mini ml20" title="Yeni Market Ekle"><i class="fa fa-plus"></i></a>
                    </h2>

                    @if (hasResult)
                    {
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#ID</th>
                                        <th>Kategori</th>
                                        <th>Sıra</th>
                                        <th width="6%">Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ID</td>
                                            <td class="td-name">
                                                @item.Name
                                            </td>
                                            <td>@item.Order</td>
                                            <td class="text-center">
                                                @Html.StatusFor(item.Status)
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Detail", "Category", new {name = item.Name.ToLowerInvariant(), id = item.ID})" class="btn btn-sm btn-success" target="_blank"><i class="fa fa-eye"></i> Görüntüle</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div style="float: right; margin-top: 10px;" class="product-pager"></div>
                    }
                    else
                    {
                        <hr />
                        <div class="no-result-found">
                            <i class="fa fa-warning"></i>
                            <h4>Listelenecek Kayıt Bulunamadı!</h4>
                            <p class="description">Filtreleme kriterlerinizi gözden geçirin!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>