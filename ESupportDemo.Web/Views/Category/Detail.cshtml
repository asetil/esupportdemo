@using ESupportDemo.Web.Helper
@model ESupportDemo.Web.Models.Category
@{
    TempData["ActivePage"] = 3;
    ViewBag.Title = Model != null ? Model.Name : "Kategori Detay";
}

<section class="container-fluid category-detail">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header card-header-icon"><i class="fa fa-tv"></i></div>
                <div class="card-content">
                    <h2 class="card-title">@ViewBag.Title</h2>

                    @if (Model != null)
                    {
                    <div class="box box-info store-detail-dialog">
                        @using (Html.BeginForm("Detail", "Category", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                        {
                            <div class="form-group">
                                <label for="" class="title col-sm-2 control-label">#ID</label>
                                <div class="col-sm-10">
                                    <label class="viewable">@Model.ID</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Name" class="title col-sm-2 control-label">Kategori Adı</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x=>x.Name,new { @class= "form-control text validate", placeholder = "",  maxlength = 100 })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Product.Name" class="title col-sm-2 control-label">Sıra</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Order, new { @class = "form-control text validate", placeholder = "", maxlength = 9 })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Product.Status" class="title col-sm-2 control-label">Durum</label>
                                <div class="col-sm-10">
                                    <div class="horizantal-selector  ">
                                        <div class="btn-group">
                                            <button type="button" class="btn active" data-id="1">Aktif</button>
                                            <button type="button" class="btn " data-id="2">Pasif</button>
                                        </div>
                                        <input id="Status" name="Status" type="hidden" value="1">
                                    </div>
                                </div>
                            </div>

                            <hr />
                            <div class="text-right">
                                @Html.ButtonFor("Kaydet", "btn-success btn-save-store")
                            </div>
                        }
                    </div>
                    }
                    else
                    {
                        <div class="callout callout-danger">
                            <h4><i class="icon fa fa-warning"></i> Kategori Bulunamadı</h4>
                            <p>Böyle bir kategori yok ya da işlem yapma/görüntüleme yetkiniz bulunmuyor!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

